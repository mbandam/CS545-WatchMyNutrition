                             <div class="row">
            <div class="mealType">
               
                    <div class="col"><input type="text" id="datepicker" name="datepicker" /><label class="datelabel">Please select the date </label></div>
                     
           
                <script>
                    let dateBefore7Days = new Date();
                    dateBefore7Days.setDate(dateBefore7Days.getDate() - 7);
                    const picker = datepicker('#datepicker', { minDate: dateBefore7Days, maxDate: new Date(), dateSelected: new Date() });
                </script>
               
                <ul>
                    <li>
                        <input type="radio" id="first" name="meal" value="breakfast" checked>
                        <label for="first"> Breakfast </label>
                        <div class="check"></div>
                    </li>

                    <li>
                        <input type="radio" id="second" name="meal" value="lunch">
                        <label for="second"> Lunch </label>
                        <div class="check">
                            <div class="inside"></div>
                        </div>
                    </li>

                    <li>
                        <input type="radio" id="third" name="meal" value="dinner">
                        <label for="third"> Dinner </label>
                        <div class="check">
                            <div class="inside"></div>
                        </div>
                    </li>
                </ul>
                
            </div>
            <!--   <p>Please select the type of food you had: </p>
                                <div class="mealType">
                                    <input type="radio" name="foodType" value="nutritious"> Nutritious <br>

                                    <input type="radio" name="foodType" value="nonnutritious"> Non Nutritious <br>
                                </div> -->
            <!--  <button id="nut" type="button"> Nutritious</button>
                                <button id="nonnut" type="button"> Non Nutritious</button>
                                <br></br>  -->
            <div class="slidecontainer col-md-6">
                <input type="range" min="1" max="10" value="5" class="slider" name="myRange" oninput="amount.value=myRange.value">
                <label class="amountlabel" for="myRange"> Value selected </label>
                <output class="amount" id="amount" name="amount" for="myRange">5</output>
            </div>

           <div class="col-md-6 ">
                            <label for="weight" class="amountlabel">Weight(lbs)- Please update once a day</label>
                            <input type="text" class="form-control" max="400" placeholder="weigth" name="weight" id="weight" pattern="[0-9.]+" minlength="2" maxlength="3" value="{{user.weight}}">
                         </div>
            <button id="submit" type="submit"> Submit </button>
            <br></br>
